<div class=" container col-md-7  ">

    <body class="">
        <h1>Edit Product</h1>
        <form class="container" action="/admin/edit-product/{{product._id}}" method="post" enctype="multipart/form-data">
            <label for="">Category name:</label><br>
            <select name="category" >
                <option selected> {{product.category}} </option>
                {{#each allCategory}}
                <option value="{{this.category}}" >{{this.category}}</option>
                {{/each}}
            </select><br>
            {{!-- <input type="text" name="category" value="{{product.category}}"><br> --}}

            <label for="">Product name:</label><br>
            <input type="text" name="title"value="{{product.title}}"><br>

            <label for="lname">Slug:</label><br>
            <input type="text" name="slug"value="{{product.slug}}"><br>

            <label for="lname">Tag:</label><br>
            <input type="text" name="tag"value="{{product.tag}}"><br>

            <label for="lname">Small Description:</label><br>
            <input type="text" name="smalldescription"value="{{product.smalldescription}}"><br>

            <label for="lname">Stock:</label><br>
            <input type="text" name="stock"value="2"><br>
            
            <label for="lname">Description:</label><br>
            <input type="text" name="description"value="{{product.description}}"><br>
            
            <label for="lname">Original price:</label><br>
            <input type="text" name="price" value="{{product.price}}"><br>

            <label for="lname">Selling price:</label><br>
            <input type="text" name="sellprice"value="{{product.sellprice}}" ><br>

            <label for="">Available Status:</label><br>
            <label class="radio-inline mx-4 ">
                <input type="radio"name='available' value="true"checked>Available
                <br>
                <input type="radio"name='available' value="false">Out of Stock
            </label><br>
            
            <label for="lname">Trending:</label><br>
            <label class="radio-inline mx-4 ">
                <input type="radio"name='trending' value="true">Trending
                <br>
                <input type="radio"name='trending' value="false">Not Trending
            </label><br>

            <label for="lname">Meta keyword:</label><br>
            <input type="text" name="metakey"value="{{product.metakey}}"><br>

            <label for="">Image:</label><br>
            <img src="/product-image/{{product._id}}.jpg" alt="" id="output" style="width: 100px"><br>
            <input type="file" name="photo" "form-controls" onchange="loadFile(event)"><br>

            <button type="submit" class=" btn btn-success m-auto">Submit Edit </button>
        </form>
    </body>
</div>


<script>
var loadFile = function(event) {
	var image = document.getElementById('output');
	image.src = URL.createObjectURL(event.target.files[0]);
};
</script>