<section>
    <style>
        .myblackcolor {
        color: black;
        }
        a:link {
        color: black !important;
        text-decoration: none;
        }
    </style>
    <div class="container">
        <div class="row ">
            <div class="col-md-12  ">
                {{!-- <h5 class="text-center"> Category </h5> --}}
                <div class="row ">
                    {{#each cat}}
                    <div class=" col-md-3 p-2 " style="width: 16rem;">
                        <div class="my-auto">
                            <a class="" href="/view-product/{{this.category}}">
                                
                                <img class="card-img-top " src="/category-image/{{this._id}}.jpg" height='230px' style="border-radius: 50%" alt="Card image cap">
                                <div class=" mt-3 ">
                                        <h5 class="text-center myblackcolor">{{ this.category }}</h5>
                                </div>
                            </a>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>


</section>
